server {
    listen 80;
    server_name 89.169.157.231;  # Замените на ваш домен

    location /static/ {
        alias /opt/django_app/static/;  # Путь к статическим файлам
    }

    location /media/ {
        alias /opt/django_app/media/;  # Путь к медиафайлам
    }

    location / {
        proxy_pass http://89.169.157.231:8000;  # Прокси для вашего Django-приложения, которое работает на порту 8000
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
